<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <StatDef Name="DroidStatBase" Abstract="True">
    <category>MD3_DroidStats</category>
    <showOnAnimals>false</showOnAnimals>
    <showOnHumanlikes>false</showOnHumanlikes>
    <showOnMechanoids>false</showOnMechanoids>
    <showOnNonWildManHumanlikes>false</showOnNonWildManHumanlikes>
  </StatDef>

  <StatDef ParentName="DroidStatBase">
    <defName>MD3_DroidCPUCapacity</defName>
    <label>CPU capacity</label>
    <description>Capacity of the droid's CPU to support different mods and AI packages.</description>
    <displayPriorityInCategory>100</displayPriorityInCategory>
    <defaultBaseValue>100</defaultBaseValue>
    <minValue>100</minValue>
    <toStringStyle>FloatOne</toStringStyle>
    <toStringStyleUnfinalized>FloatOne</toStringStyleUnfinalized>
    <formatString>{0}tf</formatString>
  </StatDef>

    <StatDef ParentName="DroidStatBase">
    <defName>MD3_DroidCPUUsage</defName>
    <label>CPU usage</label>
    <description>The droid's CPU usage.</description>
    <displayPriorityInCategory>75</displayPriorityInCategory>
    <defaultBaseValue>0</defaultBaseValue>
    <minValue>0</minValue>
    <toStringStyle>FloatOne</toStringStyle>
    <toStringStyleUnfinalized>FloatOne</toStringStyleUnfinalized>
    <formatString>{0}tf</formatString>
  </StatDef>
  
  <StatDef ParentName="DroidStatBase">
    <defName>MD3_DroidPowerStorage</defName>
    <label>power storage</label>
    <description>Capacity of the droid's power core.</description>
    <displayPriorityInCategory>80</displayPriorityInCategory>
    <defaultBaseValue>500</defaultBaseValue>
    <minValue>500</minValue>
    <toStringStyle>Integer</toStringStyle>
    <toStringStyleUnfinalized>FloatOne</toStringStyleUnfinalized>
    <formatString>{0}Wd</formatString>
  </StatDef>

  <StatDef ParentName="DroidStatBase">
    <defName>MD3_DroidPowerMaxRate</defName>
    <label>maximum power load</label>
    <description>The maximum power load that this droid's power core is capable of sourcing.</description>
    <displayPriorityInCategory>70</displayPriorityInCategory>
    <defaultBaseValue>300</defaultBaseValue>
    <minValue>100</minValue>
    <toStringStyle>FloatOne</toStringStyle>
    <toStringStyleUnfinalized>FloatOne</toStringStyleUnfinalized>
    <formatString>{0}W</formatString>
  </StatDef>  

  <StatDef ParentName="DroidStatBase">
    <defName>MD3_DroidPowerDrain</defName>
    <label>power drain</label>
    <description>The droid's power drain.</description>
    <displayPriorityInCategory>50</displayPriorityInCategory>
    <defaultBaseValue>50</defaultBaseValue>
    <minValue>0</minValue>
    <toStringStyle>FloatOne</toStringStyle>
    <toStringStyleUnfinalized>FloatOne</toStringStyleUnfinalized>
    <formatString>{0}W</formatString>
  </StatDef>

</Defs>
